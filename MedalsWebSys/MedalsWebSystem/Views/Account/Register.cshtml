@model MedalsWebSystem.ViewModels.RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Регистрация";
}

<div class="registration">
    <h2>Регистрация</h2>

    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div>
                <label asp-for="Email">Email:</label><br />
                <input type="text" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Name">Имя:</label><br />
                <input type="text" asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Surname">Фамилия:</label><br />
                <input type="text" asp-for="Surname" />
                <span asp-validation-for="Surname"></span>
            </div>
            <div>
                <label asp-for="Login">Логин (для отображения на сайте)</label><br />
                <input type="text" asp-for="Login" />
                <span asp-validation-for="Login"></span>
            </div>
            <div>
                <label asp-for="Password">Введите пароль</label><br />
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                <input asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div>
                <input type="submit" value="Регистрация" />
            </div>
        </div>
    </form>

</div>



